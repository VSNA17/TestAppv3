<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".Groceries"
    android:padding="16sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8sp">

        <ImageView
            android:layout_width="125sp"
            android:layout_height="125sp"
            android:src="@drawable/food"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="8sp"
            android:text="Food"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/Food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="50sp"
            android:text="Open tab"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp">

        <ImageView
            android:layout_width="125sp"
            android:layout_height="125sp"
            android:src="@drawable/cleaning"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="8sp"
            android:text="Cleaning"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/Cleaners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="50sp"
            android:text="Open tab"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp">

        <ImageView
            android:layout_width="125sp"
            android:layout_height="125sp"
            android:src="@drawable/cutlery"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="8sp"
            android:text="Utensils and Cutlery"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/Utensils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="50sp"
            android:text="Open tab"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp">

        <ImageView
            android:layout_width="125sp"
            android:layout_height="125sp"
            android:src="@drawable/cosmetics"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="8sp"
            android:text="Cosmetics"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/Cosmetics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="50sp"
            android:text="Open tab"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp">

        <ImageView
            android:layout_width="125sp"
            android:layout_height="125sp"
            android:src="@drawable/baby"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="8sp"
            android:text="Baby care"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/Babycare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="50sp"
            android:text="Open tab"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp">

        <ImageView
            android:layout_width="125sp"
            android:layout_height="125sp"
            android:src="@drawable/others"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="8sp"
            android:text="Others"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/Others_groceries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="50sp"
            android:text="Open tab"/>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>